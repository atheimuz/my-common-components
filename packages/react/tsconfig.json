{
  "compilerOptions": {
    "outDir": "dist",
    "module": "esnext",
    "lib": ["es5", "dom"],
    "moduleResolution": "node",
    "jsx": "react",
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "paths": {
      "@atheimuz/react-ui/*": ["dist/components/*"]
    }
  },
  "include": ["src"],
  "exclude": ["**/*.stories.tsx","**/*.stories.ts", "dist"]
}
